{
  "name": "static-site-starter",
  "description": "monolambda boilerplate for static sites",
  "version": "1.0.0",
  "author": "levsthings",
  "license": "Unlicense",
  "repository": {
    "type": "git",
    "url": "https://github.com/monolambda/static-site-starter"
  },
  "main": "index.js",
  "scripts": {
    "dev": "webpack-dev-server --progress",
    "build": "yarn run clean && export NODE_ENV=production || SET \"NODE_ENV=production\" && webpack --config webpack.config.prod.js --progress --hide-modules",
    "clean": "rimraf ./dist/*",
    "serve": "yarn build && static dist",
    "lint": "eslint --fix ./src/ --color",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "yarn lint",
      "git add"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-preset-env": "^1.5.1",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.28.4",
    "eslint": "^3.19.0",
    "eslint-config-monolambda": "^1.1.7",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "html-loader": "^0.4.5",
    "html-webpack-plugin": "^2.28.0",
    "husky": "^0.13.4",
    "image-webpack-loader": "^3.3.1",
    "lint-staged": "^3.6.1",
    "node-sass": "^4.5.3",
    "node-static": "^0.7.9",
    "postcss-loader": "^2.0.5",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.5",
    "style-loader": "^0.18.1",
    "uglifyjs-webpack-plugin": "^0.4.3",
    "webpack": "^2.6.1",
    "webpack-dev-server": "^2.4.5",
    "webpack-visualizer-plugin": "^0.1.11"
  }
}
